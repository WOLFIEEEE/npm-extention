{
  "name": "@theaccessibleteam/a11y-feedback-react",
  "version": "1.0.0",
  "description": "React bindings for a11y-feedback - accessible notifications and screen reader announcements",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "react",
    "accessibility",
    "a11y",
    "aria-live",
    "screen-reader",
    "hooks",
    "notifications",
    "toast"
  ],
  "author": "The Accessible Team <theaccessibleteam@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WOLFIEEEE/npm-extention.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/WOLFIEEEE/npm-extention/issues"
  },
  "homepage": "https://github.com/WOLFIEEEE/npm-extention/tree/main/packages/react#readme",
  "peerDependencies": {
    "@theaccessibleteam/a11y-feedback": "workspace:^",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}

