{
  "name": "@theaccessibleteam/a11y-feedback",
  "version": "2.0.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Production-grade accessibility feedback engine for the web. Unified screen reader announcements, focus management, and WCAG-compliant notifications.",
  "type": "module",
  "main": "./dist/a11y-feedback.cjs",
  "module": "./dist/a11y-feedback.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/a11y-feedback.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/a11y-feedback.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "aria-live",
    "screen-reader",
    "wcag",
    "wcag-2.2",
    "announcements",
    "focus-management",
    "feedback",
    "notifications",
    "toast",
    "alerts",
    "screen-reader-announcements",
    "assistive-technology",
    "inclusive-design",
    "web-accessibility"
  ],
  "author": "The Accessible Team <theaccessibleteam@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WOLFIEEEE/a11y-feedback.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/WOLFIEEEE/a11y-feedback/issues"
  },
  "homepage": "https://wolfieeee.github.io/a11y-feedback/",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/WOLFIEEEE"
  }
}
