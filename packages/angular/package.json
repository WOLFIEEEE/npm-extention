{
  "name": "@theaccessibleteam/a11y-feedback-angular",
  "version": "2.0.0",
  "description": "Angular bindings for a11y-feedback accessibility notification library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "peerDependencies": {
    "@theaccessibleteam/a11y-feedback": "^2.0.0",
    "@angular/core": ">=15.0.0",
    "rxjs": ">=7.0.0"
  },
  "devDependencies": {
    "@angular/core": "^17.0.0",
    "rxjs": "^7.8.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "angular",
    "a11y",
    "accessibility",
    "notifications",
    "screen-reader",
    "aria"
  ],
  "author": "The Accessible Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WOLFIEEEE/a11y-feedback.git",
    "directory": "packages/angular"
  },
  "publishConfig": {
    "access": "public"
  }
}
